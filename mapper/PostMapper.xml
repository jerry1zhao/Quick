<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.jerry.quick.user.dao.PostDao">

    <resultMap type="Post" id="postsResult">
        <id column="post_id" property="id"/>
        <result column="postheaderimage" property="postHeaderImage"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <association property="createUser"  column="createuser" javaType="User" resultMap="userResult" />
        <association property="updateUser"  column="updateuser" javaType="User" resultMap="userResult"/>
    </resultMap>

    <resultMap type="pers.jerry.quick.user.domain.User" id="userResult">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="name"/>
    </resultMap>

    <select id="getPosts" resultMap="postsResult">
        SELECT * FROM posttest
    </select>

</mapper>
